<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:padding="25dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/achievement_box"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-2dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>

    <ImageButton
        android:id="@+id/silang"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        android:contentDescription="silang"
        android:elevation="50dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/silangx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayoutControls"
        android:layout_width="300dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/silang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/achievement_black" />

                <ImageView
                    app:srcCompat="@drawable/achievement_nickname"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="-101dp"/>

                <ImageView
                    app:srcCompat="@drawable/achievement_skin"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="-78dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/achievement_profile" />

            </LinearLayout>




        </LinearLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/info_button"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/achievement_text"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_text"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"/>

    <ImageButton
        android:id="@+id/putih_putih"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_white"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="220dp"
        android:layout_marginTop="140dp"/>

    <ImageButton
        android:id="@+id/destroyer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_destroyer"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="220dp"
        android:layout_marginTop="85dp"/>

    <ImageButton
        android:id="@+id/collector"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_collector"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginTop="85dp"/>

    <ImageButton
        android:id="@+id/collector2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_destroyer"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="-220dp"
        android:layout_marginTop="85dp"/>

    <ImageButton
        android:id="@+id/thropy3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_trophy_1"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="220dp"
        android:layout_marginTop="140dp"/>

    <ImageButton
        android:id="@+id/putih_putih2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_white"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginTop="140dp"/>
    <ImageButton
        android:id="@+id/thropy2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_trophy_2"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginTop="122dp"/>

    <ImageButton
        android:id="@+id/putih_putih3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_white"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="-220dp"
        android:layout_marginTop="140dp"/>

    <ImageButton
        android:id="@+id/thropy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/achievement_trophy_1"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="-220dp"
        android:layout_marginTop="140dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
