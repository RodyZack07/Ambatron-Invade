<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- VideoView sebagai latar belakang -->
    <VideoView
        android:id="@+id/videoViewBackground"
        android:layout_width="1200dp"
        android:layout_height="1200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"

        />

    <!-- Gambar latar belakang di atas VideoView -->
<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/background"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:contentDescription="@null" />-->






    <!-- Konten lainnya seperti tombol-tombol -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!-- Judul -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/judul_ambatron1"
            android:contentDescription="@null"
            android:layout_marginBottom="100dp" />

        <!-- Tombol-tombol -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Play Button"
                android:src="@drawable/play_button"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Play Button"
                android:src="@drawable/achievement_button"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:contentDescription="Setting Button"
                android:background="@android:color/transparent"
                android:src="@drawable/setting_button"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/btn_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="QuitButton"
                android:background="@android:color/transparent"
                android:src="@drawable/quit_menu"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:outlineSpotShadowColor="@color/black"
        app:srcCompat="@drawable/profil_icon" />



<!--    <ImageView-->
<!--        android:layout_width="400dp"-->
<!--        android:layout_height="200dp"-->
<!--        android:src="@drawable/box_horizontal"-->
<!--        android:layout_marginLeft="-9dp"-->
<!--        android:layout_marginTop="700dp"-->

        />
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="halo Selamat Datang"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="700dp"
        android:textColor="@color/white"/>

</FrameLayout>
