<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameContent">


    <!-- VideoView untuk memutar video latar belakang -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        />
    <!-- GameView untuk menggambar game -->
    <com.example.savesthekunti.Activity.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.savesthekunti.Activity.GameView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/neuropol"
            android:gravity="top|end"
            android:text="Score : 0"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/MonsterDefeated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/neuropol"
            android:gravity="top|end"
            android:text="Monster Killed : 0"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <ImageButton
            android:id="@+id/pausebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/preset_pause_button"
            android:textSize="20dp"
            android:visibility="gone"

            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/healthBarLayout"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:id="@+id/HPtext"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:src="@drawable/hp_bar"/>
        <ImageView
            android:id="@+id/OneBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/gray_dark"/>

        <ImageView
            android:id="@+id/TwoBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/gray"/>

        <ImageView
            android:id="@+id/ThreebarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/gray_medium" />

        <ImageView
            android:id="@+id/FourbarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/gray_white"/>
        <ImageView
            android:id="@+id/FiveBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="11dp"
            android:layout_gravity="bottom"
            android:src="@drawable/white"/>
        <ImageView
            android:id="@+id/borderBar"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="128dp"
            android:layout_gravity="bottom"
            android:src="@drawable/border_bar"/>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/bossHealthBar"
        android:layout_width="450dp"
        android:layout_height="65dp"
        android:layout_marginTop="700dp"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
       >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/boss_profile"
           />

        <ImageView
            android:id="@+id/bossBar1"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_1"
            />

        <ImageView
            android:id="@+id/bossBar2"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_2" />

        <ImageView
            android:id="@+id/bossBar3"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_3" />

        <ImageView
            android:id="@+id/bossBar4"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_4" />

        <ImageView
            android:id="@+id/bossBar5"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_5" />

        <ImageView
            android:id="@+id/bossBar6"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_6" />

        <ImageView
            android:id="@+id/bossBar7"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_7" />

        <ImageView
            android:id="@+id/bossBar8"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_8" />

        <ImageView
            android:id="@+id/bossBar9"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_9" />

        <ImageView
            android:id="@+id/bossBar10"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_boss_10" />


    </LinearLayout>

</RelativeLayout>
