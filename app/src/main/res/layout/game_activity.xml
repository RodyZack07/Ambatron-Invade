<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameContent">


    <!-- VideoView untuk memutar video latar belakang -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
   />
    <!-- GameView untuk menggambar game -->
    <com.example.savesthekunti.Activity.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.savesthekunti.Activity.GameView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/neuropol"
            android:gravity="top|end"
            android:text="Score : 0"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/MonsterDefeated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/neuropol"
            android:gravity="top|end"
            android:text="Monster Killed : 0"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/pausebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/preset_pause_button"
            android:textSize="20dp"

            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/healthBarLayout"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:id="@+id/HPtext"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/hp_bar"/>
        <ImageView
            android:id="@+id/OneBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/gray_dark"/>

        <ImageView
            android:id="@+id/TwoBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/gray"/>

        <ImageView
            android:id="@+id/ThreebarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/gray_medium" />

        <ImageView
            android:id="@+id/FourbarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/gray_white"/>
        <ImageView
            android:id="@+id/FiveBarLeft"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:src="@drawable/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"/>



</LinearLayout>
    <ProgressBar
        android:id="@+id/bossHealthBar"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:progressBackgroundTint="@color/light_blue"
        android:progress="100"
        android:max="100"
        android:layout_marginTop="700dp"
        style="?android:attr/progressBarStyleHorizontal"/>

</RelativeLayout>
