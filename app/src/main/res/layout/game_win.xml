<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="25dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/setting_box"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-2dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/setting_card"
            android:elevation="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="50dp"
            android:text="Level 1"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/game_info_home_button"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="100dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/replayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/game_info_retry"
            tools:ignore="MissingConstraints"
            android:layout_gravity="center_horizontal"  />

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/game_info_next"
            tools:ignore="MissingConstraints"
            />
    </FrameLayout>

    <ImageButton
        android:id="@+id/silang"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        android:contentDescription="silang"
        android:elevation="50dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/silangx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayoutControls"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/silang">

        <ImageView
            android:id="@+id/bintang_kosong"
            android:src="@drawable/game_info_bintang_kosong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            />
        <!--        Bintang Kuning -->
        <ImageView
            android:id="@+id/bintang_kuning"
            android:src="@drawable/game_info_bintang_kuning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/bintang_kosong2"
            android:src="@drawable/game_info_bintang_kosong"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-10dp"
            />
        <!--        Bintang Kuning -->
        <ImageView
            android:id="@+id/bintang_kuning2"
            android:src="@drawable/game_info_bintang_kuning"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-5dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/bintang_kosong3"
            android:src="@drawable/game_info_bintang_kosong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="20dp"
            />
<!--        Bintang Kuning -->
        <ImageView
            android:id="@+id/bintang_kuning3"
            android:src="@drawable/game_info_bintang_kuning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="23dp"
            android:visibility="gone"
            />

        <ImageView
            android:src="@drawable/game_win_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            />




    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
